<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lyricaloriginal.robolectricpractice.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permutation nPm の計算"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/label_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:text="n = "
        android:textSize="22sp" />

    <EditText
        android:id="@+id/input_n"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_n"
        android:layout_below="@id/title"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/label_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_n"
        android:layout_marginTop="8dp"
        android:text="m = "
        android:textSize="22sp" />

    <EditText
        android:id="@+id/input_m"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_m"
        android:layout_below="@id/input_n"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/calculate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_m"
        android:layout_marginTop="12dp"
        android:text="Permutation計算"
        android:textSize="20sp" />


</RelativeLayout>
